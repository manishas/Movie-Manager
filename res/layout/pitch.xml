<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    	<include layout="@layout/scorebar"/>
        <TextView android:text="Pitch your film to the Studios: " android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        <TableLayout android:id="@+id/pitchtable" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
          
        </TableLayout>
        <Button android:layout_height="0dp" android:text="@+string/cancel" android:id="@+id/pitchcancel" android:layout_weight="1" android:layout_width="wrap_content"></Button>
      
    </LinearLayout>
    
</ScrollView>
