<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/starname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/starprice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="1"
        android:text="TextView"
        android:textColor="@android:color/black" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_weight="1"
	    android:gravity="right">

    <ImageView
        android:id="@+id/actionbonus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="right"
        android:src="@drawable/action_icon" />
	
	    <ImageView
	        android:id="@+id/romancebonus"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:gravity="right"
	        android:src="@drawable/romance_icon" />
	
	    <ImageView
	        android:id="@+id/horrorbonus"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:gravity="right"
	        android:src="@drawable/horror_icon" />
	
	    <ImageView
	        android:id="@+id/comedybonus"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:gravity="right"
	        android:src="@drawable/comedy_icon" />
	
	    <ImageView
	        android:id="@+id/dramabonus"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:gravity="right"
	        android:src="@drawable/drama_icon" />
	
	    <ImageView
	        android:id="@+id/kidsbonus"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:gravity="right"
	        android:src="@drawable/kids_icon" />

	    <ImageView
	        android:id="@+id/scifibonus"
	        android:layout_width="15dp"
	        android:layout_height="20dp"
	        android:gravity="right"
	        android:src="@drawable/scifi_icon" />

    </LinearLayout>

</LinearLayout>