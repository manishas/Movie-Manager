<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TextView android:text="@+string/enterfilmname" android:id="@+id/enterfilmname" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <EditText android:id="@+id/nametextfield" android:layout_height="wrap_content" android:layout_width="match_parent">
        <requestFocus></requestFocus>
    </EditText>
    <TextView android:text="@+string/selectgenre" android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/genrespinner"></Spinner>
    <Button android:layout_height="wrap_content" android:id="@+id/getdirectorbutton" android:text="Button" android:layout_gravity="center" android:layout_width="138dp"></Button>
    
</LinearLayout>
