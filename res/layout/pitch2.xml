<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/scorebar" />

        <!-- producers -->
            <ViewFlipper
                android:id="@+id/ViewFlipper01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <!-- adding views to ViewFlipper -->
				<!-- First Producer -->
                <LinearLayout
                    android:id="first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/producerpic1"
                        android:layout_width="175dp"
                        android:layout_height="194dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/suits1" />

                    <TextView
                        android:id="@+id/producercomment1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="ygkgjgyjgfjtyfg" />
                </LinearLayout>

                <!-- Second Producer -->
                <LinearLayout
                    android:id="second"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/producerpic2"
                        android:layout_width="175dp"
                        android:layout_height="194dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/suits2" />

                    <TextView
                        android:id="@+id/producercomment2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="ygkgjgyjgfjtyfg" />
                </LinearLayout>
				
                <!-- Third Producer -->
                <LinearLayout
                    android:id="third"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/producerpic3"
                        android:layout_width="175dp"
                        android:layout_height="194dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/suits1" />

                    <TextView
                        android:id="@+id/producercomment3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="ygkgjgyjgfjtyfg" />
                </LinearLayout>
            </ViewFlipper>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/reworkscript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="@string/rework_script" />

            <Button
                android:id="@+id/chooseproducer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="@string/choose_this_producer" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>